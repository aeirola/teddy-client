<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="hostname"
        android:title="@string/pref_title_hostname"
        android:defaultValue="@string/pref_default_hostname"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="port"
        android:title="@string/pref_title_port"
        android:defaultValue="@string/pref_default_port"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="password"
        android:title="@string/pref_title_password"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <CheckBoxPreference
        android:key="enable_ssl"
        android:title="@string/pref_title_enable_ssl"
        android:summary="@string/pref_description_enable_ssl"
        android:defaultValue="true" />

    <CheckBoxPreference
        android:key="allow_untruster_ssl"
        android:title="@string/pref_title_allow_untrusted_ssl"
        android:summary="@string/pref_description_allow_untrusted_ssl"
        android:defaultValue="false" />



</PreferenceScreen>
