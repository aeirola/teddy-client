<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="@string/pref_default_uri"
        android:key="uri"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_uri" />

    <EditTextPreference
        android:inputType="textPassword"
        android:key="password"
        android:title="@string/pref_title_password" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="allow_untrusted_ssl"
        android:summary="@string/pref_description_allow_untrusted_ssl"
        android:title="@string/pref_title_allow_untrusted_ssl" />


</PreferenceScreen>
